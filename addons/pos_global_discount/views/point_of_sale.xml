                <link rel="stylesheet" href="/pos_global_discount/static/src/css/pos_custom.css" id="pos-custom"/>
            </xpath>
        </template>
        
    
        <template id="assets_backend2" name="pos_advance assets" inherit_id="web.assets_backend">
